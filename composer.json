{
    "name": "illuminated/console-logger",
    "description": "Provides logging and notifications for Laravel console commands.",
    "keywords": ["laravel", "console", "command", "logger", "notification", "email", "slack", "database"],
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitry Ivanov",
            "email": "dmitry.g.ivanov@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.6.4",
        "illuminate/support": "5.4.*",
        "illuminate/console": "5.4.*",
        "illuminated/helper-functions": "5.4.*",
        "monolog/monolog": "^1.11",
        "psr/http-message": "^1.0",
        "psr/log": "^1.0",
        "symfony/finder": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "mockery/mockery": "^0.9",
        "guzzlehttp/guzzle": "^6.0",
        "orchestra/testbench": "3.4.*",
        "illuminated/testing-tools": "5.4.*"
    },
    "autoload": {
        "files": ["integrations/autoload.php"],
        "psr-4": {
            "Illuminated\\Console\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/ConsoleLogger/TestCase.php",
            "tests/ConsoleLogger/fixture/app"
        ]
    }
}
