{
    "name": "illuminated/console-logger",
    "description": "Provides logging and notifications for Laravel console commands.",
    "keywords": ["laravel", "console", "command", "logger", "notification", "email", "database", "slack"],
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitry Ivanov",
            "email": "dmitry.g.ivanov@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.6.4",
        "illuminate/console": "^5.2",
        "illuminated/helper-functions": "^1.0",
        "monolog/monolog": "^1.19",
        "psr/http-message": "^1.0",
        "psr/log": "^1.0",
        "symfony/finder": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.6",
        "orchestra/testbench": "^3.3",
        "mockery/mockery": "^0.9.5",
        "guzzlehttp/guzzle": "^6.2"
    },
    "autoload": {
        "files": ["integrations/autoload.php"],
        "psr-4": {
            "Illuminated\\Console\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php",
            "tests/fixture/app"
        ]
    }
}
