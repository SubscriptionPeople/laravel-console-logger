{
    "name": "illuminated/console-logger",
    "description": "Provides logging and notifications for Laravel console commands.",
    "keywords": ["laravel", "console", "command", "logger", "notification", "email", "slack", "database"],
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitry Ivanov",
            "email": "dmitry.g.ivanov@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "illuminate/console": "^5.1",
        "monolog/monolog": "^1.11",
        "symfony/finder": "^2.7|^3.0",
        "illuminated/helper-functions": "^1.0",
        "psr/http-message": "^1.0",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0",
        "mockery/mockery": "^0.9",
        "orchestra/testbench": "^3.1",
        "illuminated/testing-tools": "^0.5",
        "guzzlehttp/guzzle": "^6.0"
    },
    "autoload": {
        "files": ["integrations/autoload.php"],
        "psr-4": {
            "Illuminated\\Console\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php",
            "tests/fixture/app"
        ]
    }
}
